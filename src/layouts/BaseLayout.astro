---
import '../app.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Подготовка к собеседованию по JavaScript' } = Astro.props;
---

<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="bg-gray-900 text-gray-100 min-h-screen">
    <div class="flex flex-col min-h-screen">
      <header class="sticky top-0 z-50 bg-gray-800/95 backdrop-blur-sm border-b border-gray-700">
        <nav class="container mx-auto px-4 py-4">
          <div class="flex items-center justify-between">
            <a href="/" class="flex items-center space-x-2 group">
              <div class="w-10 h-10 bg-gradient-to-br from-primary-400 to-primary-600 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform">
                <span class="text-xl font-bold text-white">JS</span>
              </div>
              <span class="text-xl font-bold bg-gradient-to-r from-primary-400 to-primary-600 bg-clip-text text-transparent">
                Interview Prep
              </span>
            </a>
            <div class="flex items-center space-x-6">
              <a href="/" class="text-gray-300 hover:text-primary-400 transition-colors">Главная</a>
              <a href="/topics.html" class="text-gray-300 hover:text-primary-400 transition-colors">Темы</a>
              <a href="/about.html" class="text-gray-300 hover:text-primary-400 transition-colors">О проекте</a>
            </div>
          </div>
        </nav>
      </header>

      <main class="flex-grow">
        <slot />
      </main>

      <footer class="bg-gray-800 border-t border-gray-700 mt-16">
        <div class="container mx-auto px-4 py-8">
          <div class="text-center text-gray-400">
            <p>&copy; {new Date().getFullYear()} JS Interview Prep. Создано с помощью Astro и Vue.</p>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
  }
</style>
